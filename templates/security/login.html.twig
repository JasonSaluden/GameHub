{% extends 'base.html.twig' %}

{% block title %}Connexion - GameHubPro{% endblock %}

{% block body %}
<!-- Import Bootstrap (si non déjà fait dans ton base.html.twig) -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container d-flex justify-content-center align-items-center" style="height: 100vh;">
    <div class="card shadow-lg" style="width: 100%; max-width: 400px;">
        <div class="card-header bg-primary text-white text-center">
            <h3>Connexion</h3>
        </div>
        <div class="card-body">
            <form method="POST" action="{{ path('app_login') }}">
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="text" class="form-control" id="email" name="_username" required autofocus>
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Mot de passe</label>
                    <input type="password" class="form-control" id="password" name="_password" required>
                </div>

                <button type="submit" class="btn btn-primary w-100">Se connecter</button>
            </form>
            {% if error %}
    <div class="alert alert-danger">
        {{ error.messageKey|trans(error.messageData, 'security') }}
    </div>
{% endif %}

        </div>
        <div class="card-footer text-center">
            <small>Pas encore de compte ? <a href="{{ path('app_register') }}">S'inscrire</a></small>
        </div>
    </div>
</div>

<!-- Optionally add Bootstrap JS (if necessary) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}
