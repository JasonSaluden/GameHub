<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@500&display=swap" rel="stylesheet">
{% endblock %}

		{% block javascripts %}
			{% block importmap %}
				{{ importmap('app') }}
			{% endblock %}
		{% endblock %}

	</head>


	<body>
	<header class="p-3 mb-4 border-bottom">
<div class="container d-flex justify-content-center">
{% if app.user %}
    <div class="position-absolute top-0 end-0 p-3">
        <form action="{{ path('app_logout') }}" method="post">
            <button type="submit" class="btn btn-outline-danger btn-sm">Déconnexion</button>
        </form>
    </div>
{% endif %}

    <a href="{{ path('app_video_game') }}" class="text-decoration-none display-3 fw-bold text-dark">
                GameHub
            </a>
        </div>
    </header>
		{% for message in app.flashes('success') %}
			<div class="alert alert-success">
				{{ message }}
			</div>
		{% endfor %}


{# {% if app.user %}
    <p>Utilisateur authentifié : {{ app.user.email }}</p>
{% else %}
    <p>Aucun utilisateur authentifié</p>
{% endif %} #}

		{# {% if not app.user %}
			<div class="auth-buttons">
				<a href="{{ path('app_login') }}" class="btn btn-primary">Se connecter</a>
				<a href="{{ path('app_register') }}" class="btn btn-secondary">S'inscrire</a>
			</div>
		{% else %}
			<div class="welcome-message">
				<p>Bonjour
					{{ app.user.email }}!</p>
			</div>
		{% endif %} #}

		{% block body %}{% endblock %}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

	</body>
</html>
