{% extends 'base.html.twig' %}

{% block title %}Inscription - GameHubPro{% endblock %}

{% block body %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container d-flex justify-content-center align-items-center" style="height: 100vh;">
    <div class="card shadow-lg" style="width: 100%; max-width: 400px;">
        <div class="card-header bg-success text-white text-center">
            <h3>Inscription</h3>
        </div>
        <div class="card-body">
            {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.email, { 'attr': {'class': 'form-control mb-3'} }) }}
                {{ form_row(registrationForm.plainPassword, { 'attr': {'class': 'form-control mb-3'} }) }}


                
                {# Si tu veux afficher les jeux à choisir aussi #}
                {# {{ form_row(registrationForm.games, { 'attr': {'class': 'mb-3'} }) }} #}

                <button type="submit" class="btn btn-success w-100">Créer un compte</button>
            {{ form_end(registrationForm) }}
        </div>
        <div class="card-footer text-center">
            <small>Déjà inscrit ? <a href="{{ path('app_login') }}">Se connecter</a></small>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}
